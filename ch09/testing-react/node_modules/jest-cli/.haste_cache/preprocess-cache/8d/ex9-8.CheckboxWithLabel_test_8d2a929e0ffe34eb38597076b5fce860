// 예제 9-8. 업데이트된 CheckboxWithLabel_test.js 소스코드
'use strict'; // istanbul ignore next
function _interopRequireDefault(obj) {return obj && obj.__esModule ? obj : { 'default': obj };}var _react = require(

'react');var _react2 = _interopRequireDefault(_react);var _reactDom = require(
'react-dom');var _reactDom2 = _interopRequireDefault(_reactDom);var _reactAddonsTestUtils = require(
'react-addons-test-utils');var _reactAddonsTestUtils2 = _interopRequireDefault(_reactAddonsTestUtils);jest.autoMockOff();

var CheckboxWithLabel = require('../CheckboxWithLabel');

describe('CheckboxWithLabel', function () {

  // 라벨을 포함하는 체크박스 하나를 문서에 렌더링한다.
  var checkbox = _reactAddonsTestUtils2['default'].renderIntoDocument(
  _react2['default'].createElement(CheckboxWithLabel, { labelOn: 'On', labelOff: 'Off' }));


  var checkboxNode = _reactDom2['default'].findDOMNode(checkbox);

  it('defaults to Off label', function () {
    // 기본적으로 Off인지 확인한다.
    expect(checkboxNode.textContent).toEqual('Off');});


  it('defaults to unchecked', function () {
    // 체크박스 입력 필드가 기본적으로 선택된 상태인지 확인한다.
    var checkboxElement = _reactAddonsTestUtils2['default'].findRenderedDOMComponentWithTag(checkbox, 'input');
    expect(checkboxElement.checked).toBe(false);});


  it('changes the label after click', function () {
    // 클릭을 시뮬레이션하고 On으로 변경되는지 확인한다.
    _reactAddonsTestUtils2['default'].Simulate.change(
    _reactAddonsTestUtils2['default'].findRenderedDOMComponentWithTag(checkbox, 'input'));

    expect(checkboxNode.textContent).toEqual('On');});});